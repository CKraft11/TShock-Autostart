# Contents of /etc/systemd/system/terraria.service
[Unit]
Description=Terraria Server
After=network.target

[Service]
Type=simple
Restart=always
ExecStartPre=/bin/sleep 30
ExecStart=mono --server --gc=sgen -O=all /root/TShock4.4.0_Pre15_Terraria1.4.1.2/TerrariaServer.exe -maxplayers 16 -port 7777 -world /root/.local/share/Terraria/Worlds/RADON.wld

[Install]
WantedBy=multi-user.target